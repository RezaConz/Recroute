<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home">

        <RelativeLayout
            android:id="@+id/layouthome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_marginTop="30dp"
                android:paddingStart="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/hamburger"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/menu_hamburger"/>
                <ImageView
                    android:paddingStart="270dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/bannerHome"
                android:layout_below="@id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/gambarbannerhome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_banner"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>


            <ImageView
                android:id="@+id/rankking"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:layout_below="@id/bannerHome"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-20dp"
                android:paddingStart="30sp"
                android:paddingEnd="30sp"
                android:src="@drawable/user_stats" />

            <TextView
                android:id="@+id/rekomendasi_kelas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rekomendasi kelas >"
                android:layout_below="@id/rankking"
                android:fontFamily="@font/robotomedium"
                android:textColor="@color/Black"
                android:paddingStart="30sp"
                android:textSize="16sp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/carswipe"
                android:layout_below="@id/rekomendasi_kelas"
                android:layout_width="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/gambarbanner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gambar_cardview_1"
                        />

                    <TextView
                        android:id="@+id/tipeBanner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotomedium"
                        android:layout_marginStart="20dp"
                        android:textSize="11sp"
                        android:textColor="@color/Black"
                        android:text="Flutter"
                        />

                    <TextView
                        android:id="@+id/judulBanner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotobold"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="7dp"
                        android:textSize="16sp"
                        android:textColor="@color/Black"
                        android:text="Full-Stack Laravel Flutter"
                        />

                    <TextView
                        android:id="@+id/deskripsiBanner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotomedium"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="7dp"
                        android:textSize="12sp"
                        android:textColor="@color/Black"
                        android:text="Building E-Commerce and Chat Apps"
                        />

                    <TextView
                        android:id="@+id/hargaBanner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotomedium"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="7dp"
                        android:textSize="14sp"
                        android:textColor="@color/Harga"
                        android:text="Rp 129.999,00"
                        />
                    <Button
                        android:id="@+id/buttonBanner1"
                        android:layout_width="204dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_shape"
                        android:text="DETAIL"
                        android:textColor="@color/White"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="10dp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/leader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leaderboard >"
                android:layout_marginTop="20dp"
                android:layout_below="@id/carswipe"
                android:fontFamily="@font/robotomedium"
                android:textColor="@color/Black"
                android:paddingStart="30sp"
                android:textSize="16sp"
                />

            <ImageView
                android:id="@+id/leaderbaord_img"
                android:layout_width="match_parent"
                android:layout_height="253dp"
                android:paddingStart="30sp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/leader"
                android:paddingEnd="30sp"
                android:src="@drawable/rank_img" />

            <TextView
                android:id="@+id/seluruh_kelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seluruh Kelas >"
                android:layout_marginTop="15dp"
                android:layout_below="@id/leaderbaord_img"
                android:fontFamily="@font/robotomedium"
                android:textColor="@color/Black"
                android:paddingStart="30sp"
                android:textSize="16sp"
                />

            <LinearLayout
                android:layout_below="@id/seluruh_kelas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <Button
                        android:id="@+id/button_webdev"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="30sp"
                        android:background="@drawable/button_shape_yellow"
                        android:text="Web Developer"
                        android:fontFamily="@font/robotomedium"
                        android:textSize="11sp"
                        android:layout_gravity="start"
                        />
                    <Button
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="30sp"
                        android:background="@drawable/button_shape_yellow"
                        android:text="Data Scientist"
                        android:fontFamily="@font/robotomedium"
                        android:textSize="11sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    tools:ignore="UselessParent">

                    <Button
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="30sp"
                        android:background="@drawable/button_shape_yellow"
                        android:text="UI / UX Designer"
                        android:fontFamily="@font/robotomedium"
                        android:textSize="11sp"
                        android:layout_gravity="start"
                        />
                    <Button
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="30sp"
                        android:background="@drawable/button_shape_yellow"
                        android:text="Digital Marketer"
                        android:fontFamily="@font/robotomedium"
                        android:textSize="11sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="0dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <Button
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="30sp"
                        android:background="@drawable/button_shape_yellow"
                        android:text="Mobile Developer"
                        android:fontFamily="@font/robotomedium"
                        android:textSize="11sp"
                        android:layout_gravity="start"
                        />
                    <Button
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="30sp"
                        android:layout_marginBottom="70dp"
                        android:background="@drawable/button_shape_yellow"
                        android:text="Illustrator"
                        android:fontFamily="@font/robotomedium"
                        android:textSize="11sp"
                        />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

</ScrollView>