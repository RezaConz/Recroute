<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".myCourse">
    <FrameLayout
        android:id="@+id/Frame_mycourse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/course"
        android:layout_width="148dp"
        android:layout_height="43dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/robotobold"
        android:text="Course"
        android:textColor="@color/Black"
        android:textSize="22sp"
        android:lineSpacingExtra="2sp"
        android:gravity="center_vertical"
        />
    <LinearLayout
        android:id="@+id/jeniscourse"
        android:layout_below="@id/course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/webDev"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginStart="30sp"
                android:background="@drawable/button_shape_yellow"
                android:text="Web Developer"
                android:fontFamily="@font/robotomedium"
                android:textSize="11sp"
                android:layout_gravity="start"
                />
            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="30sp"
                android:background="@drawable/button_shape_yellow"
                android:text="Data Scientist"
                android:fontFamily="@font/robotomedium"
                android:textSize="11sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginStart="30sp"
                android:background="@drawable/button_shape_yellow"
                android:text="UI / UX Designer"
                android:fontFamily="@font/robotomedium"
                android:textSize="11sp"
                android:layout_gravity="start"
                />
            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="30sp"
                android:background="@drawable/button_shape_yellow"
                android:text="Digital Marketer"
                android:fontFamily="@font/robotomedium"
                android:textSize="11sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginStart="30sp"
                android:background="@drawable/button_shape_yellow"
                android:text="Mobile Developer"
                android:fontFamily="@font/robotomedium"
                android:textSize="11sp"
                android:layout_gravity="start"
                />
            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_shape_yellow"
                android:text="Illustrator"
                android:fontFamily="@font/robotomedium"
                android:textSize="11sp"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/rekomendasi_kelas_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rekomendasi kelas >"
        android:layout_marginTop="10dp"
        android:layout_below="@id/jeniscourse"
        android:fontFamily="@font/robotomedium"
        android:textColor="@color/Black"
        android:paddingStart="30sp"
        android:textSize="16sp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/carswipe_course"
        android:layout_below="@id/rekomendasi_kelas_course"
        android:layout_width="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gambarbanner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gambar_cardview_1"
                />

            <TextView
                android:id="@+id/tipeBanner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:layout_marginStart="20dp"
                android:textSize="11sp"
                android:textColor="@color/Black"
                android:text="Flutter"
                />

            <TextView
                android:id="@+id/judulBanner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotobold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:text="Full-Stack Laravel Flutter"
                />

            <TextView
                android:id="@+id/deskripsiBanner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:textSize="12sp"
                android:textColor="@color/Black"
                android:text="Building E-Commerce and Chat Apps"
                />

            <TextView
                android:id="@+id/hargaBanner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:textSize="14sp"
                android:textColor="@color/Harga"
                android:text="Rp 129.999,00"
                />
            <Button
                android:id="@+id/buttonBanner1"
                android:layout_width="204dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/button_shape"
                android:text="DETAIL"
                android:textColor="@color/White"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>