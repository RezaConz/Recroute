<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CheckOut">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/backNotifikasi"
            android:layout_width="155dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/robotobold"
            android:gravity="center_vertical"
            android:lineSpacingExtra="5sp"
            android:text="&lt; Notifikasi"
            android:textColor="@color/Black"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/PembayranKelasDipilih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30sp"
            android:backgroundTint="@color/Primary"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/robotobold"
                    android:paddingStart="10dp"
                    android:text="BNI Virtual Account"
                    android:textColor="@color/White"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/robotomedium"
                    android:paddingStart="10dp"
                    android:text="Kode Pembayaran"
                    android:textColor="@color/White"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/kodePembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/robotomedium"
                    android:paddingStart="10dp"
                    android:text="024FDG4592RI43BVN"
                    android:textColor="@color/White"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/copyButton"
                    android:layout_width="32dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="290dp"
                    android:layout_marginTop="-25dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_shape"
                    android:scaleType="fitXY"
                    android:src="@drawable/copy_to_clipboard" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingStart="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:text="ID Pesanan"
                android:textColor="@color/Black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:fontFamily="@font/robotomedium"
                android:text="AGFGT66778"
                android:textColor="@color/Black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingStart="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:text="Total Pembayaran"
                android:textColor="@color/Black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:fontFamily="@font/robotomedium"
                android:text="Rp200.000,00"
                android:textColor="@color/Black"
                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingStart="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:text="Bayar Sebelum"
                android:textColor="@color/Black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="68dp"
                android:fontFamily="@font/robotomedium"
                android:text="30 Maret 2023 15:24 WIB"
                android:textColor="@color/Black"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/robotobold"
            android:paddingStart="30dp"
            android:text="Petunjuk Pembayaran"
            android:textColor="@color/Black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="361dp"
            android:layout_height="47dp"
            android:layout_marginTop="10dp"
            android:paddingStart="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/unduh_petunjuk_pembayaran" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/robotobold"
            android:paddingStart="30dp"
            android:text="Sudah melakukan pembayaran?"
            android:textColor="@color/Black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="371dp"
            android:layout_height="158dp"
            android:layout_marginTop="10dp"
            android:paddingStart="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/unggah_bukti_pembayaran" />

        <Button
            android:id="@+id/buttonBayar"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:width="350dp"
            android:background="@drawable/button_shape"
            android:text="Kirim"
            android:textAllCaps="false"
            android:textColor="@color/White" />
    </LinearLayout>

</RelativeLayout>