<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RewardBelanja">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/RewardUname"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/robotobold"
            android:text="Bambang Gaming"
            android:textColor="@color/Neutral800"
            android:textSize="22sp"
            android:lineSpacingExtra="2sp"
            android:gravity="center_vertical"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/poin_reward"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rewardSemua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/reward_semua"/>
            <ImageView
                android:id="@+id/rewardEdukasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/reward_edukasi"/>
            <ImageView
                android:id="@+id/rewardMakanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/reward_makanan"/>
            <ImageView
                android:id="@+id/rewardBelanja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/reward_belanja_blue"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/rewardSomethinc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30sp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="85dp"
                            android:src="@drawable/reward_somethinc"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Somethinc\nGratis 2 Salmon Serum"
                            android:textSize="12sp"
                            android:textColor="@color/Black800"
                            android:fontFamily="@font/robotobold"
                            android:paddingStart="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:layout_marginTop="4dp"
                            android:text="Berlaku di seluruh \ntoko resmi Somethinc"
                            android:fontFamily="@font/robotomedium"
                            android:textSize="11sp"
                            android:textColor="@color/Neutral500" />
                        <LinearLayout
                            android:layout_marginTop="4dp"
                            android:paddingStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/reward_icon"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Warning900"
                                android:paddingStart="5dp"
                                android:layout_marginBottom="10dp"
                                android:text="655"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/rewardMackbook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30sp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="85dp"
                            android:src="@drawable/reward_mackbook"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="IBOX\nFree Macbook PRO 16"
                            android:textSize="12sp"
                            android:textColor="@color/Black800"
                            android:fontFamily="@font/robotobold"
                            android:paddingStart="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:layout_marginTop="4dp"
                            android:text="Berlaku di\nJABODETABEK"
                            android:fontFamily="@font/robotomedium"
                            android:textSize="11sp"
                            android:textColor="@color/Neutral500" />
                        <LinearLayout
                            android:layout_marginTop="4dp"
                            android:paddingStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/reward_icon"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Warning900"
                                android:paddingStart="5dp"
                                android:layout_marginBottom="10dp"
                                android:text="6000"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/rewardHnM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30sp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="85dp"
                            android:src="@drawable/reward_hnm"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="HnM\nFree fit Hoodie"
                            android:textSize="12sp"
                            android:textColor="@color/Black800"
                            android:fontFamily="@font/robotobold"
                            android:paddingStart="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:layout_marginTop="4dp"
                            android:text="Berlaku di seluruh\nHnM Indonesia"
                            android:fontFamily="@font/robotomedium"
                            android:textSize="11sp"
                            android:textColor="@color/Neutral500" />
                        <LinearLayout
                            android:layout_marginTop="4dp"
                            android:paddingStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/reward_icon"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Warning900"
                                android:paddingStart="5dp"
                                android:layout_marginBottom="10dp"
                                android:text="675"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>