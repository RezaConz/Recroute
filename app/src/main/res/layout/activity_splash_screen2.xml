<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".SplashScreen2">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/logoSP2"
            android:layout_width="253dp"
            android:layout_height="181dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo_besar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/splashScreen2Text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logoSP2"
                android:layout_gravity="center"
                android:fontFamily="@font/robotobold"
                android:text="WELCOME TO OUR APP"
                android:textColor="@color/Neutral800"
                android:textSize="26sp" />

        <TextView
            android:id="@+id/splashScreen2Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/logoSP2"
            android:layout_gravity="center"
            android:fontFamily="@font/robotoregular"
            android:text="Temukan keterampilan baru dan pekerjaan"
            android:textColor="@color/Neutral800"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/splashScreen2Text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoSP2"
            android:layout_gravity="center"
            android:fontFamily="@font/robotoregular"
            android:text="impian Anda bersama Recroute"
            android:textColor="@color/Neutral800"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>