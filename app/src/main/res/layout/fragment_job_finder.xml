<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MyCourseAktif">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:paddingStart="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pencari Pekerjaan"
                android:fontFamily="@font/robotobold"
                android:textSize="20sp"
                android:textColor="@color/Neutral800"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/JobFinderTerkirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30sp"
            android:backgroundTint="#3E8CFE"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="5dp"
                    android:text="Job"
                    android:fontFamily="@font/robotobold"
                    android:textColor="@color/White"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="151dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_white"
                    android:text="Terkirim"
                    android:fontFamily="@font/robotobold"
                    android:textAllCaps="false"
                    android:textColor="@color/Primary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/UIDesignerParagon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30sp"
            android:backgroundTint="@color/White"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:src="@drawable/rectangle_complete_designer"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="UI Designer"
                        android:textSize="15sp"
                        android:textColor="@color/Black"
                        android:fontFamily="@font/robotomedium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Paragon Corp."
                        android:textSize="11sp"
                        android:textColor="@color/Neutral800"
                        android:fontFamily="@font/robotoregular"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="10dp"
                android:text="Status: Lamaran direview"
                android:textSize="11sp"
                android:textColor="@color/Neutral800"
                android:fontFamily="@font/robotomedium"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/UIDesignerSkill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30sp"
            android:backgroundTint="@color/White"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:src="@drawable/applyjob"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="UI Designer"
                        android:textSize="15sp"
                        android:textColor="@color/Black"
                        android:fontFamily="@font/robotomedium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Skill Academy"
                        android:textSize="11sp"
                        android:textColor="@color/Neutral800"
                        android:fontFamily="@font/robotoregular"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="10dp"
                android:text="Status: Interview dijadwalkan"
                android:textSize="11sp"
                android:textColor="@color/Neutral800"
                android:fontFamily="@font/robotomedium"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>