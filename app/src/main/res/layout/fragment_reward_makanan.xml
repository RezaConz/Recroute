<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RewardMakanan">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/RewardUname"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/robotobold"
            android:text="Bambang Gaming"
            android:textColor="@color/Neutral800"
            android:textSize="22sp"
            android:lineSpacingExtra="2sp"
            android:gravity="center_vertical"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/poin_reward"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rewardSemua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/reward_semua"/>
            <ImageView
                android:id="@+id/rewardEdukasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/reward_edukasi"/>
            <ImageView
                android:id="@+id/rewardMakanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/reward_makanan_blue"/>
            <ImageView
                android:id="@+id/rewardBelanja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/reward_belanja"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/rewardKFC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30sp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="85dp"
                            android:src="@drawable/reward_kfc"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="KFC\nGRATIS 1 WINGER"
                            android:textSize="12sp"
                            android:textColor="@color/Black800"
                            android:fontFamily="@font/robotobold"
                            android:paddingStart="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:layout_marginTop="4dp"
                            android:text="Berlaku di seluruh\ncabang"
                            android:fontFamily="@font/robotomedium"
                            android:textSize="11sp"
                            android:textColor="@color/Neutral500" />
                        <LinearLayout
                            android:layout_marginTop="4dp"
                            android:paddingStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/reward_icon"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Warning900"
                                android:paddingStart="5dp"
                                android:layout_marginBottom="10dp"
                                android:text="620"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/rewardSbux"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30sp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="85dp"
                            android:src="@drawable/reward_sbux"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="STARBUCKS\nBELI 1 GRATIS 1"
                            android:textSize="12sp"
                            android:textColor="@color/Black800"
                            android:fontFamily="@font/robotobold"
                            android:paddingStart="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:layout_marginTop="4dp"
                            android:text="Berlaku 7 hari setelah penukaran poin"
                            android:fontFamily="@font/robotomedium"
                            android:textSize="11sp"
                            android:textColor="@color/Neutral500" />
                        <LinearLayout
                            android:layout_marginTop="4dp"
                            android:paddingStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/reward_icon"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Warning900"
                                android:paddingStart="5dp"
                                android:layout_marginBottom="10dp"
                                android:text="615"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>