<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".JobApplication">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:paddingStart="30dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/backLamaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt; Form Lamaran"
            android:fontFamily="@font/robotobold"
            android:textSize="16sp"
            android:textColor="@color/Neutral800"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Template Formulir"
            android:fontFamily="@font/robotomedium"
            android:textSize="12sp"
            android:textColor="@color/Neutral800"
            />

        <ImageView
            android:id="@+id/unduhTemplate"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/unduh_template" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30sp"
        android:backgroundTint="@color/Primary10"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="336dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nama Lengkap :"
                android:fontFamily="@font/robotomedium"
                android:textSize="12sp"
                android:textColor="@color/Neutral800"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="293dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/namaLengkap"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/edit_text_shape"
                    android:hint=" Masukan Nama Lengkap"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textSize="11dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Curriculum Vitae"
                android:fontFamily="@font/robotomedium"
                android:textSize="12sp"
                android:textColor="@color/Neutral800"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/edit_text_shape"
                    android:hint=" CV_bambang.pdf\t\t\t\t\t\t\t\t\t\t\t\t"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textSize="11dp" />

                <ImageView
                    android:layout_width="131dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="-7dp"
                    android:layout_marginTop="-8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ubahfile" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Formulir (yang sudah terisi)"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/robotomedium"
                android:textSize="12sp"
                android:textColor="@color/Neutral800"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/edit_text_shape"
                    android:hint=" Formulir_bambang.pdf\t\t\t\t\t\t\t\t"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textSize="11dp" />

                <ImageView
                    android:layout_width="131dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="-7dp"
                    android:layout_marginTop="-8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ubahfile" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/kirim"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="230dp"
                android:background="@drawable/button_shape"
                android:textColor="@color/White"
                android:text="Kirim"
                android:textAllCaps="false"/>

        </LinearLayout>
        </LinearLayout>
</RelativeLayout>