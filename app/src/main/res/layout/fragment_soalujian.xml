<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SoalujianFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/frame_ujianakhir" />
        <androidx.cardview.widget.CardView
            android:layout_marginTop="-30dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#E3EEFF">
            <TextView
                android:id="@+id/countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.00"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textColor="@color/Primary900"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:fontFamily="@font/robotoregular"
            android:textColor="@color/Black800"
            android:textSize="14sp"
            android:text="1.    Apa itu user interface design?"/>
        <RadioGroup
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="Proses membangun antarmuka yang fokus pada gaya dan tampilan yang interaktif bagi pengguna."/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="Proses meningkatkan kepuasan pengguna dalam meningkatkan kegunaan dan kesenangan yang diberikan dalam interaksi antara pengguna dan produk."/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="Proses menganalisis kebutuhan pengguna dalam rangka mengembangkan suatu produk."/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="Tampilan visual sebuah produk yang menghubungkan sistem dengan pengguna (user)."/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:fontFamily="@font/robotoregular"
            android:textColor="@color/Black800"
            android:textSize="14sp"
            android:text="2.    Seberapa cepat user dapat mencapai tujuan pada saat menggunakan produk tersebut merupakan pengertian kriteria Usability yaitu..."/>
        <RadioGroup
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="Effectiveness"/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="Efficiency"/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="Learnability"/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="Utility"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:fontFamily="@font/robotoregular"
            android:textColor="@color/Black800"
            android:textSize="16sp"
            android:text="3.    Google Material Desain mengatur, untuk teks panjang pada layar smartphone, panjang teks adalah ... karakter per baris."/>
        <RadioGroup
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="20-40"/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="40-60"/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="60-80"/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="100-120"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:fontFamily="@font/robotoregular"
            android:textColor="@color/Black800"
            android:textSize="16sp"
            android:text="4.    Jarak antara baseline disebut ..."/>
        <RadioGroup
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="Tracking"/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="Spacing"/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="Leading"/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="Kerning"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:fontFamily="@font/robotoregular"
            android:textColor="@color/Black800"
            android:textSize="16sp"
            android:text="5.    Web Content Accessibility Guidelines (WCAG) mengatur tentang keterbacaan teks pada background berwarna. Berapakah nilai yang terbaik dari standar ini?"/>
        <RadioGroup
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="A"/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="AA"/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="AAA"/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/Black800"
                android:textSize="14sp"
                android:text="AAAA"/>
        </RadioGroup>
        <Button
            android:id="@+id/nextKirim"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="80dp"
            android:text="Kirim"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_shape"
            android:textSize="14sp"
            />
    </LinearLayout>
</ScrollView>