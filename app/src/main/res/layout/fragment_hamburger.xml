<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradien_biru"
    tools:context=".HamburgerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="30sp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hamburger_back"
            android:layout_marginTop="180dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi User!"
            android:textColor="@color/White"
            android:fontFamily="@font/robotomedium"
            android:textSize="25sp"
            android:paddingTop="50dp"
            />

        <LinearLayout
            android:id="@+id/mycourse_hamburger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_mycourse"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Course"
                android:fontFamily="@font/robotoregular"
                android:paddingStart="10dp"
                android:textSize="18sp"
                android:textColor="@color/White"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pesanan_hamburger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon__pesanan"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pesanan"
                android:fontFamily="@font/robotoregular"
                android:paddingStart="10dp"
                android:textSize="18sp"
                android:textColor="@color/White"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/notif_hamburger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_notif"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifikasi"
                android:fontFamily="@font/robotoregular"
                android:paddingStart="10dp"
                android:textSize="18sp"
                android:textColor="@color/White"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/reward_hamburger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_reward"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reward"
                android:fontFamily="@font/robotoregular"
                android:paddingStart="10dp"
                android:textSize="18sp"
                android:textColor="@color/White"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/logout_hamburger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon__logout"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:fontFamily="@font/robotoregular"
                android:paddingStart="10dp"
                android:textSize="18sp"
                android:textColor="@color/White"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>