<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailKelas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/backDetailKelas"
            android:layout_width="155dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:text="&lt; Detail kelas"
            android:fontFamily="@font/robotobold"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:lineSpacingExtra="5sp"
            android:gravity="center_vertical"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/bannerHome"
            android:layout_below="@id/hamburger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/gambarbannerhome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/gambar_detailkelas"
                android:scaleType="fitXY"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/joobile_logo"
                android:paddingStart="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\tJobilee Enterprise"
                android:fontFamily="@font/robotomedium"
                android:textSize="12sp"
                android:textColor="@color/Neutral800"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Complete UI Designer"
            android:textSize="15sp"
            android:paddingStart="30dp"
            android:textColor="@color/Black"
            android:fontFamily="@font/robotobold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="UI/UX Designer"
            android:textSize="11sp"
            android:paddingStart="30dp"
            android:textColor="@color/Neutral800"
            android:fontFamily="@font/robotomedium"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/emailNamaPembayaran"
            android:layout_width="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/namaPembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/robotomedium"
                    android:text="Mayoritas masyarakat dunia menggunakan media digital pada desktop dan ponsel. Dalam kata lain, segala kebutuhan dapat segera terpenuhi..."
                    android:textColor="@color/Black"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/showMoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/robotomedium"
                    android:text="Show More"
                    android:textColor="@color/Primary"
                    android:textSize="11sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Topik"
            android:textSize="15sp"
            android:paddingStart="30dp"
            android:textColor="@color/Black"
            android:fontFamily="@font/robotobold"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/topik_detail_kelas"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Materi"
            android:textSize="15sp"
            android:paddingStart="30dp"
            android:textColor="@color/Black"
            android:fontFamily="@font/robotobold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Desain Visual"
            android:textSize="11sp"
            android:paddingStart="30dp"
            android:textColor="@color/Neutral800"
            android:fontFamily="@font/robotomedium"
            />

        <ImageView
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/materi_desain_visual" />

        <Button
            android:id="@+id/buttonDetailKelas"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:width="350dp"
            android:background="@drawable/button_shape"
            android:text="Beli"
            android:textAllCaps="false"
            android:textColor="@color/White" />

    </LinearLayout>
</ScrollView>