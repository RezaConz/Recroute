<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Pembayaran">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
            android:id="@+id/Backpembayaran"
            android:layout_width="155dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:text="&lt; Pembayaran"
            android:fontFamily="@font/robotobold"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:lineSpacingExtra="5sp"
            android:gravity="center_vertical"
            />

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/Backpembayaran">

                <androidx.cardview.widget.CardView
                    android:id="@+id/emailNamaPembayaran"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30sp"
                    android:layout_marginEnd="30sp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#E3EEFF"
                    >

                <LinearLayout
                    android:layout_width="336dp"
                    android:layout_height="70dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/namaPembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/robotobold"
                        android:text="Bambang Gaming"
                        android:textColor="@color/Neutral800"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/emailPembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/robotomedium"
                        android:text="bambang@gmail.com"
                        android:textColor="@color/Neutral800"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/pembayaran_kelas_yang_dipilih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelas Yang Dipilih"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/Black"
                android:paddingStart="30sp"
                android:textSize="16sp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/PembayranKelasDipilih"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginStart="30sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30sp"
                android:backgroundTint="@color/Primary"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="336dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingStart="10dp"
                        android:src="@drawable/rectangle_complete_designer"
                        />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/joobile_logo"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\tJobilee Enterprise"
                        android:fontFamily="@font/robotomedium"
                        android:layout_marginTop="7dp"
                        android:textSize="11sp"
                        android:textColor="@color/White"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:paddingStart="70dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Complete UI/UX Designer"
                        android:textSize="15sp"
                        android:textColor="@color/White"
                        android:fontFamily="@font/robotobold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="UI/UX Designer"
                        android:textSize="11sp"
                        android:textColor="@color/White"
                        android:fontFamily="@font/robotomedium"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/pembayaran_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promo"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/Black"
                android:paddingStart="30sp"
                android:textSize="16sp"
                />

            <ImageView
                android:id="@+id/pembayaranKodePromo"
                android:layout_width="361dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:paddingStart="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/masukan_kode_promo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metode Pembayaran"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/Black"
                android:paddingStart="30sp"
                android:textSize="16sp"
                />

            <ImageView
                android:id="@+id/pembayaraMetodePembayaran"
                android:layout_width="365dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:paddingStart="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/metode_pembayaran"
                />

            <ImageView
                android:layout_width="372dp"
                android:layout_height="140dp"
                android:layout_marginTop="20dp"
                android:paddingStart="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/detail_pembayran" />

            <androidx.cardview.widget.CardView
                android:id="@+id/buttonBeli"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="@color/Primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="139dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/robotobold"
                        android:paddingStart="30dp"
                        android:text="BNI Virtual Account"
                        android:textColor="@color/White"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="226dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/robotobold"
                        android:paddingStart="115dp"
                        android:text="Rp200.000,00"
                        android:textColor="@color/White"
                        android:textSize="15sp" />
                </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   >

                   <Button
                       android:id="@+id/buttonpembayaran"
                       android:layout_width="340dp"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="30dp"
                       android:layout_marginTop="90dp"
                       android:layout_marginBottom="20dp"
                       android:width="350dp"
                       android:background="@drawable/button_white"
                       android:text="Beli"
                       android:textAllCaps="false"
                       android:textColor="@color/Primary" />
               </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>