<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".Walktrough2">

    <ImageView
        android:id="@+id/imagewt2"
        android:layout_width="match_parent"
        android:layout_height="534dp"
        android:src="@drawable/imagewt2"
        />

    <TextView
        android:id="@+id/walktrough2Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagewt2"
        android:text="Mencari Pekerjaan \nMudah"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:fontFamily="@font/robotoregular"
        android:textSize="24sp"
        android:textColor="@color/Black"
        />

    <TextView
        android:id="@+id/walktrough2Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/walktrough2Text1"
        android:text="OUR SIGNATURE HERE\nOUR SIGNATURE HERE"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/robotomedium"
        android:textSize="14sp"
        android:textColor="@color/Black"
        />

    <ImageView
        android:id="@+id/swipeWt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wt2"
        android:layout_below="@id/walktrough2Text2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/buttonWt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/swipeWt2"
        android:width="350dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="NEXT"
        android:textColor="@color/White"
        android:background="@drawable/button_shape"
        />

</RelativeLayout>