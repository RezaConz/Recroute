<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserinterfacedesignFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/frame_ujianakhir" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pada kesempatan kali ini, kamu akan diminta untuk mengerjakan soal ujian akhir pada kelas Complete UI/UX Designer. Ujian ini berfungsi untuk menguji pengetahuan dan pemahaman kamu akan kelas yang sudah kamu ikuti. Sebelum melakukan pengerjaan, pastikan kamu sudah menguasai materi yang sudah dipelajari, ya!
\n\n\nJumlah soal: 5
\nTipe soal: Pilihan ganda
\nSyarat nilai kelulusan: 80%
\nDurasi pengerjaan: 45 menit"
            android:fontFamily="@font/robotoregular"
            android:textColor="@color/Black800"
            android:textSize="13sp"/>


        <Button
            android:id="@+id/nextKerjakan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="235dp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30dp"
            android:text="Mulai Kerjakan"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_shape"
            android:textSize="14sp"
            />
    </LinearLayout>


</RelativeLayout>